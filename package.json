{
	"name": "pocket-editor",
	"description": "Blazingly fast block style wysiwyg editor that returns markdown",
	"version": "2.5.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Victor Azevedo (https://victr.me)",
	"license": "MIT",
	"type": "module",
	"repository": {
		"url": "git+ssh://git@github.com/victrme/pocket-editor.git"
	},
	"keywords": [
		"wysiwyg",
		"contenteditable",
		"text editor",
		"rich text"
	],
	"scripts": {
		"build": "deno --allow-all ./build.config.ts && tsc",
		"test": "npx playwright test",
		"dev": "pnpm --filter example dev",
		"preview": "pnpm --filter example preview"
	},
	"devDependencies": {
		"@playwright/test": "^1.54.1",
		"esbuild": "^0.25.6"
	},
	"files": [
		"./dist/index.js",
		"./dist/index.d.ts",
		"./dist/style.css"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./style.css": "./dist/style.css"
	}
}
