{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab",
		"include": ["src", "example", "tests"]
	},
	"linter": {
		"enabled": true,
		"include": ["src", "example", "tests"],
		"rules": {
			"all": true,
			"style": { "noParameterAssign": "info" },
			"suspicious": { "noConsole": "off" },
			"correctness": { "useImportExtensions": "off" }
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"globals": ["PocketEditor"],
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		}
	}
}
