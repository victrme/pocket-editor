{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"include": ["src"],
		"ignore": ["example"],
		"rules": {
			"all": true,
			"style": { "noParameterAssign": "info" },
			"suspicious": { "noConsole": "off" },
			"correctness": { "useImportExtensions": "off" }
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"globals": ["PocketEditor"]
	}
}
